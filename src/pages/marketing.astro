---
import { BentoGridThirdDemo } from "../components/ui/design/BentoThird";
import CTA from "../components/ui/design/CTA";
import Hero from "../components/ui/design/Hero";
import Intro from "../components/ui/design/marketing/Intro";
import Process from "../components/ui/design/marketing/Processes";
import { WobbleCardDemo } from "../components/ui/design/WobbleCard";
import Layout from "../layouts/Layout.astro";

---
<head>
  <!-- Primary Meta Tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width" />
  <meta name="title" content="Alima - Marketing & Advertising" />
  <meta name="description" content="Unlock your brand's potential with Alima Agency's Marketing & Advertising services. We create tailored strategies that resonate with your audience, boost engagement, and drive conversions. From digital campaigns to traditional advertising, our expert team leverages creativity and data-driven insights to elevate your brand’s visibility and impact. Partner with us to transform your marketing efforts into measurable success!" />
  <meta name="image" content="https://alima.agency/alima-agency.svg"/>
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://alima.agency/marketing" />
  <meta property="og:title" content="Alima - Web Design & Development" />
  <meta property="og:description" content="Unlock your brand's potential with Alima Agency's Marketing & Advertising services. We create tailored strategies that resonate with your audience, boost engagement, and drive conversions. From digital campaigns to traditional advertising, our expert team leverages creativity and data-driven insights to elevate your brand’s visibility and impact. Partner with us to transform your marketing efforts into measurable success!" />
  <meta property="og:image" content="https://alima.agency/alima-agency.svg" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="https://alima.agency/marketing" />
  <meta property="twitter:title" content="Alima - Web Design & Development" />
  <meta property="twitter:description" content="Unlock your brand's potential with Alima Agency's Marketing & Advertising services. We create tailored strategies that resonate with your audience, boost engagement, and drive conversions. From digital campaigns to traditional advertising, our expert team leverages creativity and data-driven insights to elevate your brand’s visibility and impact. Partner with us to transform your marketing efforts into measurable success!" />
  <meta property="twitter:image" content="https://alima.agency/alima-agency.svg" />
  <title>Alima - Marketing & Advertising</title>
    <!-- Google tag (gtag.js) -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-Y214F10C6E"></script>
    <script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
  
    gtag('config', 'G-Y214F10C6E');
    </script>
</head>



<body>
    <main class="">
    <Layout>
        <Hero 
          h1="Elevate Your Brand to New Heights"
          sub="Unlock the true potential of your brand with our comprehensive marketing and advertising solutions."
          secBtnUrl="intro"
        />
        <div class="max-w-6xl mx-auto">
          <div id="intro">
            <Intro/>
          </div>
            <BentoGridThirdDemo client:load/>
            <WobbleCardDemo client:load/>
            <Process/>
            <CTA title="Ready to Transform Your Brand?" sub=" Contact us today to start your journey towards unparalleled marketing success."/>
        </div>
    </Layout>
    </main>
</body>
