	<body>
		<main class="mx-auto max-w-6xl">
			<Layout>
			<FloatingNavDemo client:load/>
			<Hero title="Supercharge your Business development!" client:load/>
			<div id="features">
				<FeaturesWithHeading />
			</div>
			<div id="wich">
			<Whofor/>
		    </div>
			<HeroScrollDemo client:load/>
