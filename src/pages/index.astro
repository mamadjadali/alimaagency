---
import i18next, { t, changeLanguage } from "i18next";
import FeaturesWithHeading from "../components/Bento";
import FAQ from "../components/FAQ";
import FloatingNavDemo from "../components/Float";
import Hero from "../components/Hero";
import OurApproach from "../components/OurApproach";
import { HeroScrollDemo } from "../components/UnleashScroll";
import Whofor from "../components/Whofor.astro";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");
---

<html lang={i18next.language}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{t("site.title")}</title>
	</head>
	<body>
		<main class="mx-auto max-w-6xl">
			<Layout>
			<FloatingNavDemo client:load/>
			<Hero title={t("home.title")} client:load/>
			<div id="features">
				<FeaturesWithHeading />
			</div>
			<div id="wich">
			<Whofor client:load/>
		    </div>
			<HeroScrollDemo client:load/>
			<OurApproach/>
			<FAQ client:load/>
			</Layout>
		</main>
		<script src="../../node_modules/preline/dist/preline.js"></script>
	</body>
</html>
